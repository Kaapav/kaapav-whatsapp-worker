{
  "version": 2,
  "builds": [
    {
      "src": "kaapav-chat-ui/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "kaapav-backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/kaapav-chat-ui/dist/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/kaapav-backend/$1"
    }
  ]
}
